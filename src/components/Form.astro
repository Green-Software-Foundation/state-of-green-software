---
const { title, containerClass } = Astro.props;
---

<section id="get-report" class={containerClass}>
  <!-- Begin Mailchimp Signup Form -->
  <div class="container">
    <div id="mc_embed_signup" class="form-wrapper">
      <form
        action="https://foundation.us5.list-manage.com/subscribe/post?u=ddc99c7db248c3df0ef4f7d24&id=82bc8f6e5c&f_id=009681e9f0"
        method="post"
        id="mc-embedded-subscribe-form"
        name="mc-embedded-subscribe-form"
        class="validate"
        target="_blank"
        novalidate
      >
        <div id="mc_embed_signup_scroll" class="form-content">
          <div>
            <img src="/images/newsletter.svg" alt="Newsletter" />
          </div>
          <h1>{title}</h1>

          <div class="mc-field-group">
            <input
              type="email"
              value=""
              name="EMAIL"
              class="required email"
              id="mce-EMAIL"
              placeholder="example@domain.com"
              required
            />
            <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
          </div>
          <div class="mc-field-group input-group">
            <div>
              <input
                type="checkbox"
                value="1"
                name="group[383341][1]"
                id="mce-group[383341]-383341-0"
              />
              <label class="newsletter-label" for="mce-group[383341]-383341-0"
                >Also subscribe to the Green Software Foundation newsletter</label
              >
            </div>
            <span id="mce-group[383341]-HELPERTEXT" class="helper_text"></span>
          </div>
          <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none">
            </div>
            <div
              class="response"
              id="mce-success-response"
              style="display:none"
            >
            </div>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input
              type="text"
              name="b_ddc99c7db248c3df0ef4f7d24_82bc8f6e5c"
              tabindex="-1"
              value=""
            />
          </div>
          <div class="clear">
            <input
              type="submit"
              value="Send me the report"
              name="subscribe"
              id="mc-embedded-subscribe"
              class="button"
            />
          </div>
        </div>
      </form>
    </div>
  </div>
  <script
    type="text/javascript"
    src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
  ></script><script type="text/javascript">
    (function ($) {
      window.fnames = new Array();
      window.ftypes = new Array();
      fnames[0] = "EMAIL";
      ftypes[0] = "email";
      fnames[1] = "FNAME";
      ftypes[1] = "text";
      fnames[2] = "LNAME";
      ftypes[2] = "text";
      fnames[3] = "ADDRESS";
      ftypes[3] = "address";
      fnames[4] = "PHONE";
      ftypes[4] = "phone";
    })(jQuery);
    var $mcj = jQuery.noConflict(true);
  </script>
  <!--End mc_embed_signup-->
</section>
