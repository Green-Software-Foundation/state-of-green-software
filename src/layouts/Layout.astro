import "@fontsource/nunito-sans/900.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Primary Meta Tags -->
    <title>Decarbonize Software | Online | 10th November</title>
    <meta
      name="title"
      content="Decarbonize Software | Online | 10th November"
    />
    <meta
      name="description"
      content="Green Software Foundation is excited to host an event during COP27 to highlight advancements in decarbonizing software."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://decarb.greensoftware.foundation/"
    />
    <meta
      property="og:title"
      content="Decarbonize Software | Online | 10th November"
    />
    <meta
      property="og:description"
      content="Green Software Foundation is excited to host an event during COP27 to highlight advancements in decarbonizing software."
    />
    <meta
      property="og:image"
      content="https://decarb.greensoftware.foundation/images/og-image.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://decarb.greensoftware.foundation/"
    />
    <meta
      property="twitter:title"
      content="Decarbonize Software | Online | 10th November"
    />
    <meta
      property="twitter:description"
      content="Green Software Foundation is excited to host an event during COP27 to highlight advancements in decarbonizing software."
    />
    <meta
      property="twitter:image"
      content="https://decarb.greensoftware.foundation/images/og-image.jpg"
    />
