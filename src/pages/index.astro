---
import { Icon } from "astro-icon";

import Layout from "../layouts/Layout.astro";
import InsightsCatalog from "../components/InsightsCatalog";
import type { Insight } from "../components/types";
import type { MarkdownInstance } from "astro";
const insights = await Astro.glob<MarkdownInstance<Insight>>(
  "./insights/*.{md,mdx}"
);

// sort insights by insightNo from frontmatter
insights.sort((a: MarkdownInstance<Insight>, b: MarkdownInstance<Insight>) => {
  if (a.frontmatter.insightNo < b.frontmatter.insightNo) {
    return -1;
  }
  if (a.frontmatter.insightNo > b.frontmatter.insightNo) {
    return 1;
  }
  return 0;
});
---

<Layout>
  <header>
    <div class="pattern left">
      <Icon name="pattern-left" />
    </div>
    <div class="pattern right">
      <Icon name="pattern-right" />
    </div>
    <div class="logo-wrapper">
      <Icon name="icon" width="64" />
    </div>
    <div class="content">
      <h1>2023 State of Green Software</h1>
      <p>
        A new report that brings global insights and data from industry leaders
        and researchers to the forefront to reduce software's harm to Earth and
        increase investment in decarbonizing software at scale.
      </p>
      <div>
        <a
          class="by-wrapper"
          href="https://greensoftware.foundation/"
          rel="noopener noreferrer"
          target="_blank"
        >
          <span>By</span>
          <Icon name="logo-gsf" width="100" />
        </a>
      </div>
    </div>
    <div class="btns-wrapper">
      <button class="button">Why Green Software</button>
      <button class="button">Business Case for Green Software</button>
      <button class="button">Theory of Change</button>
    </div>
  </header>
  <main>
    <InsightsCatalog insights={insights} />
  </main>
</Layout>

<style>
  header {
    text-align: center;
    padding: 3rem 2rem;
    background: var(--gray-darkest);
    position: relative;
  }
  header .pattern {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  header .pattern.left {
    left: 0;
    z-index: 1;
  }
  header .pattern.right {
    right: 0;
    z-index: 1;
  }
  header .pattern.right svg {
    margin-left: auto;
  }

  header .pattern svg {
    height: 100%;
  }

  .logo-wrapper {
    margin-bottom: 1rem;
  }
  .logo-wrapper svg {
    margin: auto;
  }
  header .content {
    max-width: 540px;
    margin: auto;
  }

  header h1 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    color: white;
  }

  header p {
    color: var(--primary-lightest-2);
  }
  .by-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 2rem;
    gap: 1rem;
    color: white;
  }
  .by-wrapper img {
    width: 100px;
  }
  .btns-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  main {
    padding: 3rem 2rem;
    max-width: 1200px;
    margin: auto;
  }

  @media (max-width: 768px) {
    header .pattern {
      display: none;
    }
  }
</style>
